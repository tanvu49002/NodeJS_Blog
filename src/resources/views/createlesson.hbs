<div class="container">
    <div class='mt-5 pt-5 mb-5 pb-5'>
        <h2>CREATE LESSON</h2>
        <form method='POST' action='/course/{{course._id}}/lesson/store' enctype="multipart/form-data">
            <div class='form-group'>
                <label for='name' class="form-label">Title:</label>
                <input type='text' class='form-control' id='title' name='title' />
            </div>
            
            <div class='form-group'>
                <label for="formFile" class="form-label">Video</label>
                <input class="form-control" type="file" id="formFile" name="video">
            </div>
            <button type='submit' class='btn btn-primary mt-4 rounded-5'>Add lesson</button>
        </form>
    </div>
</div>
